<?xml version="1.0"?>
<config>
    <!-- You can control navigation order here and add your custom navigation entries -->
    <dashboard/>
    <sales>
        <label>Sales</label>
        <title>Sales</title>
        <uri>/sales</uri>
        <icon>fa-shopping-cart</icon>
        <pages>
            <order-list/>
            <sales-reclamations/>
            <refunds>
                <label>Refunds</label>
                <title>Refunds</title>
                <bundle>refund</bundle>
                <controller>table</controller>
                <action>index</action>
                <icon>fa-user-secret</icon>
                <visible>fa-user-secret</visible>
            </refunds>
            <overview>
                <label>Order management</label>
                <title>Order management</title>
                <bundle>sales-overview</bundle>
                <controller>index</controller>
                <action>index</action>
            </overview>
            <order-matrix/>
        </pages>
    </sales>
    <merchant-gui>
        <label>Merchants Management</label>
        <title>Merchants Management</title>
        <icon>fa-file-text-o</icon>
        <pages>
            <merchant/>
            <capacity>
                <label>Capacities</label>
                <title>Capacities</title>
                <bundle>sales</bundle>
                <controller>index</controller>
                <action>capacities</action>
                <visible>1</visible>
            </capacity>
        </pages>
    </merchant-gui>
    <sales-document/>
    <export/>
    <product>
        <label>Manage Products</label>
        <title>Manage Products</title>
        <pages>
            <products/>
            <attributes/>
            <product_options/>
            <product-label-gui>
                <label>Product Labels</label>
                <title>Product Labels</title>
                <bundle>product-label-gui</bundle>
                <controller>index</controller>
                <action>index</action>
            </product-label-gui>
            <sets>
                <label>Product Sets</label>
                <title>Product Sets</title>
                <bundle>product-set-gui</bundle>
                <controller>index</controller>
                <action>index</action>
            </sets>
            <configurable-bundle-templates>
                <label>Configurable Bundle Templates</label>
                <title>Configurable Bundle Templates</title>
                <bundle>configurable-bundle-gui</bundle>
                <controller>template</controller>
                <action>index</action>
                <visible>1</visible>
            </configurable-bundle-templates>
            <AvailabilityGui/>
        </pages>
    </product>
    <category>
        <visible>1</visible>
        <label>Category</label>
        <title>Category</title>
        <bundle>category-gui</bundle>
        <controller>list</controller>
        <action>index</action>
        <order>0</order>
        <shortcut>c</shortcut>
        <icon>fa-sitemap</icon>
    </category>
    <tax/>
    <search-and-filters/>
    <customer>
        <pages>
            <customer>
                <label>Manage Customers</label>
                <title>Manage Customers</title>
            </customer>
        </pages>
    </customer>
    <cms-gui>
        <pages>
            <page/>
            <block/>
            <content-items/>
            <slots/>
            <redirects/>
        </pages>
    </cms-gui>
    <glossary/>
    <administration>
        <pages>
            <stores/>
            <payments-method/>
            <delivery-methods/>
            <sales-order-threshold-global>
                <label>Global threshold</label>
                <title>Global threshold</title>
                <bundle>sales-order-threshold-gui</bundle>
                <controller>global</controller>
                <action>index</action>
                <icon>fa-angle-double-right</icon>
            </sales-order-threshold-global>
            <sales-order-threshold-settings>
                <label>Threshold settings</label>
                <title>Threshold settings</title>
                <bundle>sales-order-threshold-gui</bundle>
                <controller>settings</controller>
                <action>index</action>
                <icon>fa-angle-double-right</icon>
            </sales-order-threshold-settings>
            <user>
                <label>User Management</label>
                <title>User Management</title>
                <bundle>user</bundle>
                <controller>index</controller>
                <action>index</action>
                <icon>fa-user</icon>
            </user>
            <warehouses>
                <label>Warehouses</label>
                <title>Warehouses</title>
                <bundle>stock-gui</bundle>
                <controller>warehouse</controller>
                <action>list</action>
            </warehouses>
            <maintenance>
                <label>Maintenance</label>
                <title>Maintenance</title>
                <bundle>maintenance</bundle>
                <controller>index</controller>
                <action>index</action>
                <icon>fa-wrench</icon>
            </maintenance>
        </pages>
    </administration>
    <maintenance>
        <visible>0</visible>
    </maintenance>
    <discount>
        <visible>1</visible>
    </discount>
    <acl>
        <visible>0</visible>
    </acl>
    <threshold>
        <visible>0</visible>
    </threshold>
</config>
