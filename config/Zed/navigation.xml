<?xml version="1.0"?>
<config>
    <!-- You can control navigation order here and add your custom navigation entries -->
    <dashboard/>
    <sales>
        <label>Sales</label>
        <title>Sales</title>
        <uri>/sales</uri>
        <icon>fa-shopping-cart</icon>
        <pages>
            <order-list/>
            <sales-reclamations/>
            <refunds>
                <label>Refunds</label>
                <title>Refunds</title>
                <bundle>refund</bundle>
                <controller>table</controller>
                <action>index</action>
                <icon>fa-user-secret</icon>
                <visible>fa-user-secret</visible>
            </refunds>
            <order-matrix/>
        </pages>
    </sales>
    <merchant-gui>
        <label>Merchants Management</label>
        <title>Merchants Management</title>
        <icon>fa-file-text-o</icon>
        <pages>
            <merchant/>
        </pages>
    </merchant-gui>
    <sales-document/>
    <export/>
    <product>
        <label>Manage Products</label>
        <title>Manage Products</title>
        <pages>
            <products/>
            <attributes/>
            <product_options/>
            <product-label-gui/>
            <AvailabilityGui/>
        </pages>
    </product>
    <category>
        <visible>1</visible>
        <label>Category</label>
        <title>Category</title>
        <bundle>category-gui</bundle>
        <controller>list</controller>
        <action>index</action>
        <order>0</order>
        <shortcut>c</shortcut>
        <icon>fa-sitemap</icon>
    </category>
    <tax/>
    <navigation/>
    <search-and-filters/>
    <customer>
        <pages>
            <customer>
                <label>Manage Customers</label>
                <title>Manage Customers</title>
            </customer>
        </pages>
    </customer>
    <cms-gui>
        <pages>
            <page/>
            <block/>
            <content-items/>
            <slots/>
            <redirects/>
        </pages>
    </cms-gui>
    <glossary/>
    <administration>
        <pages>
            <stores/>
            <payments-method/>
            <delivery-methods/>
            <sales-order-threshold-global>
                <label>Global threshold</label>
                <title>Global threshold</title>
                <bundle>sales-order-threshold-gui</bundle>
                <controller>global</controller>
                <action>index</action>
                <icon>fa-angle-double-right</icon>
            </sales-order-threshold-global>
            <sales-order-threshold-settings>
                <label>Threshold settings</label>
                <title>Threshold settings</title>
                <bundle>sales-order-threshold-gui</bundle>
                <controller>settings</controller>
                <action>index</action>
                <icon>fa-angle-double-right</icon>
            </sales-order-threshold-settings>
            <user>
                <label>User Management</label>
                <title>User Management</title>
                <bundle>user</bundle>
                <controller>index</controller>
                <action>index</action>
                <icon>fa-user</icon>
            </user>
            <maintenance>
                <label>Maintenance</label>
                <title>Maintenance</title>
                <bundle>maintenance</bundle>
                <controller>index</controller>
                <action>index</action>
                <icon>fa-wrench</icon>
            </maintenance>
        </pages>
    </administration>
    <maintenance>
        <visible>0</visible>
    </maintenance>
    <discount>
        <visible>0</visible>
    </discount>
    <acl>
        <visible>0</visible>
    </acl>
    <threshold>
        <visible>0</visible>
    </threshold>
</config>
