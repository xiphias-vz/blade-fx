{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7"
        ],
        "paths": {
            "*": [
                "*"
            ],
            "ShopUi/*": [
                "./vendor/spryker-shop/shop-ui/src/SprykerShop/Yves/ShopUi/Theme/default/*"
            ],
            "SprykerShop/*": [
                "./vendor/spryker-shop/*"
            ],
            "PriceProductVolumeWidget/*": [
                "./vendor/spryker-shop/price-product-volume-widget/src/SprykerShop/Yves/PriceProductVolumeWidget/Theme/default/*"
            ],
            "CatalogPage/*": [
                "./vendor/spryker-shop/catalog-page/src/SprykerShop/Yves/CatalogPage/Theme/default/*"
            ],
            "MerchantSwitcherWidget/*": [
                "./vendor/spryker-shop/merchant-switcher-widget/src/SprykerShop/Yves/MerchantSwitcherWidget/Theme/default/*"
            ],
            "Payone/*": [
                "./vendor/spryker-eco/payone/src/SprykerEco/Yves/Payone/Theme/default/*"
            ],
            "CustomerReorderWidget/*": [
              "./vendor/spryker-shop/customer-reorder-widget/src/SprykerShop/Yves/CustomerReorderWidget/Theme/default/*"
            ]
        }
    },
    "files": [
        "./src/Pyz/Yves/ShopUi/Theme/default/app.ts",
        "./src/Pyz/Yves/ShopUi/Theme/default/vendor.ts"
    ],
    "include": [
        "./vendor/spryker-shop/**/*",
        "./vendor/spryker-eco/**/*",
        "./src/Pyz/Yves/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
