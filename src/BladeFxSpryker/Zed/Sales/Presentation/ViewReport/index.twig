{% extends '@Gui/Layout/layout.twig' %}

{% block action %}
    {{ backActionButton(url('/sales/detail?id-sales-order=' ~ idSalesOrder ~ '#tab-content-reports'), 'Back to Order Reports List' | trans) }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="iframe-loader col-lg-12">
            <iframe width="100%" height="800" src="{{ orderDetailIframeUrl }}" title="Order details Iframe"></iframe>
        </div>
    </div>
{% endblock %}


{% block footer_js %}
    {{ parent() }}
    <script src="{{ assetsPath('js/spryker-zed-sales-main.js') }}"></script>
{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ assetsPath('css/spryker-zed-sales-main.css') }}">
{% endblock %}
