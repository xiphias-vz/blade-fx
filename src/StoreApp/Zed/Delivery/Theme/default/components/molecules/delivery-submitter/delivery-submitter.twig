{% extends model('component') %}

{% define config = {
    name: 'delivery-submitter',
    tag: 'delivery-submitter',
} %}

{% define attributes = {
    'target-checkbox-class': required,
    'closest-block-class': '',
} %}

{% block body %}
    <div class="{{ config.name }}__content">
        <div class="{{ config.name }}__counter">
            <span class="{{ config.jsName }}__counter">0</span> {{ 'delivery.selected' | trans }}
        </div>

        <div class="{{ config.name }}__button">
            <button type="submit" class="button button--expand button--large button--hollow button--white">{{ 'delivery.confirm' | trans }}</button>
        </div>
    </div>
{% endblock %}
