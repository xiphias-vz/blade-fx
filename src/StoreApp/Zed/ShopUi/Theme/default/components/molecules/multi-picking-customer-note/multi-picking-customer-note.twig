{% extends model('component') %}

{% define config = {
    name: 'multi-picking-customer-note'
} %}

{% define data = {
    fullName: required,
    customerCartNote: ''
} %}

{% block body %}
    <div class="grid grid--middle">
        <div class="col {{ config.name }}__content">
            <div class="{{ config.name }}__fontColor">{{ data.fullName }}
                <div class="close-note">
                    <button type="button" class="close-background">
                        {% include atom('icon') with {
                            modifiers: ['small'],
                            class: 'custom__icon',
                            data: {
                                name: 'close',
                            },
                        } only %}
                    </button>
                </div>
            </div>
            <div>{{ data.customerCartNote }}</div>
        </div>
    </div>
{% endblock %}
