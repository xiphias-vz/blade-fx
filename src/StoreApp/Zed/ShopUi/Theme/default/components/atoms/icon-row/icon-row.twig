{% extends model('component') %}

{% define config = {
    name: 'icon-row',
} %}

{% define data = {
    iconName: '',
    rowText: '',
    link: '',
} %}

{% block body %}
    <div class="{{ config.name }}__col">
        {% block icon %}
            {% include atom('icon') with {
                modifiers: ['big'],
                class: config.name ~ '__icon',
                data: {
                    name: data.iconName
                }
            } only %}
        {% endblock %}
    </div>
    <div class="{{ config.name }}__col">
        {% block text %}
            {% if data.link %}
                <a href="{{ data.link }}" class="{{ config.name }}__link">{{ data.rowText }}</a>
            {% else %}
                {{ data.rowText }}
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}



