{% extends model('component') %}

{% define config = {
    name: 'select-shelves-form',
    tag: 'select-shelves-form',
} %}

{% define data = {
    form: required,
} %}

{% block body %}
    <input type="hidden" id="first_letter" value="{{ 'shelf.first.letter.large' | trans }}">
    <input type="hidden" id="not_all_fields" value="{{ 'shelf.not.all.fields.entered' | trans }}">
    {% include molecule('form') with {
        data: {
            form: data.form,
            submit: {
                class: 'button button--success button--expand btn-saveShelf',
                enable: true,
            },
        }
    } only %}
{% endblock %}

