{% extends template('page-layout-main') %}

{% define data = {
    pickZone: pickZone,
    sku: sku,
    orders: orders,
    backButtonUrl: backButtonUrl,
} %}
{% block header %}
    {# TODO: ADD POSITION FROM WHERE THIS CAME #}
   {% include organism('header') with {
        data: {
            posListe: true,
            headerLocationTitle: pickZone,
            withoutLogo: true,
            pickingZone: true,
            buttonUrl: data.backButtonUrl,
        }
    } only %}
{% endblock %}
{% block content %}
    {% for key,item in data.orders %}
            {% embed molecule('pos-liste-item') with {
                data: {
                    idOrderItem: item.idOrderItem,
                    quantity: item.quantity,
                    quantityPicked: item.quantityPicked,
                    color: item.pickingColor,
                    name: item.name,
                    ean: item.ean,
                    isPaused: item.isPaused,
                    pictureUrl: item.pictureUrl,
                    sequence: item.sequence,
                    shelf: item.shelf,
                    shelfFloor: item.shelfFloor,
                    shelfField: item.shelfField,
                    aisle: item.aisle,
                    orderNumber: item.idOrder,
                    orders: item.orders,

                },
            } only %}
            {% endembed %}
    {% endfor %}
    {% include molecule('additional-order-buttons') with {
        data: {
            idSalesOrder: '1',
            urlContainerSelect: '/',
            itemSku: '321654987',
            posListeForm: true,
        }
    } only %}
{% endblock %}
{% block footer %}

{% endblock %}
