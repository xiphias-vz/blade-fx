{% extends template('widget') %}

{% define data = {
    currentPickingZone: _widget.currentPickingZone,
    isDisabled: data.isDisabled | default(false)
} %}

{% define config = {
    name: 'picking-zone-selector',
} %}

{% block body %}
    {% if data.currentPickingZone %}
        {% include molecule('picking-zone-link', 'Picker') with {
            data: {
                currentPickingZone: data.currentPickingZone,
                isDisabled: data.isDisabled
            },
        } only %}
    {% endif %}
{% endblock %}
