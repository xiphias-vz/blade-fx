{% extends model('component') %}

{% define config = {
    name: 'products-per-page'
} %}

{% define data = {
    properties: {
        dropdown: '',
        item: ''
    }
} %}

{% block body %}
    <ff-products-per-page-dropdown class="dropdown" {{ data.properties.dropdown|raw }}>
        <ff-products-per-page-item {{ data.properties.item|raw }}>
            <div>
                {% verbatim %}
                    {{ value }}
                {% endverbatim %}
            </div>
        </ff-products-per-page-item>
    </ff-products-per-page-dropdown>
{% endblock %}
