{% extends molecule('suggestion-links-list', '@SprykerShop:CatalogPage') %}

{% define config = {
    name: 'suggestion-links-list',
} %}

{% define data = {
    isTitleHiddenOnTablet: false,
} %}

{% block component %}
    {% if data.items is not empty %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block body %}
    {% if data.name %}
        <h4 class="title title--with-border title--bottom-indent {{ titleHiddenClass }}">{{ data.name }}</h4>
    {% endif %}

    <ul class="{{ config.name }}__holder">
        {% for item in data.items | slice(0, data.length) if item %}
            {% set href = data.isSuggestion ? path('search', {'q': item}) : item.url %}
            {% set value = data.isSuggestion ? item : item.name %}

            <li class="{{ config.name }}__item">
                <a class="{{ config.name }}__item-link js-suggest-search__item--navigable" href="{{ href }}">{{ value }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
