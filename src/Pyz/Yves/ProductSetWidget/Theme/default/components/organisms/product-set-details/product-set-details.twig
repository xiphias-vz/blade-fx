{% extends model('component') %}

{% define config = {
    name: 'product-set-details',
} %}

{% define data = {
    name: '',
    products: required,
    description: '',
    images: [],
    sliderConfig: '{
        "slidesToShow": 1,
        "slidesToScroll": 1,
        "dots": false,
        "infinite": false,
        "mobileFirst": true,
        "responsive": [{
            "breakpoint": 375,
            "settings": {
                "slidesToShow": 2
                }
        },
        {
            "breakpoint": 768,
            "settings": {
                "slidesToShow": 4
            }
        }]
    }',
} %}

{% block body %}
    <div class="box">
        {% block carousel %}
            {% embed molecule('slick-carousel') with {
                data: {
                    slides: data.images,
                    containerClass: 'product-set-slider',
                },
                attributes: {
                    'data-json': '{
                        "slidesToShow": 1,
                        "dots": true,
                        "arrows": false
                    }'
                },
                modifiers: ['product-set'],
            } only %}

                {% block slides %}
                    {% for slide in data.slides %}
                        {% include molecule('lazy-thumbnail') with {
                            modifiers: ['bigger', 'no-margin'],
                            attributes: {
                                itemprop: 'image',
                                src: slide.externalUrlLarge,
                            },
                        } only %}
                    {% endfor %}
                {% endblock %}
            {% endembed %}
        {% endblock %}
    </div>

    <div class="box">
        {% block header %}
            <form method="POST" action="{{ path('cart/add-items') }}">
                {% set isDisabled = false %}

                {% for product in data.products %}
                    {% if product.idProductConcrete and product.available %}
                        <input type="hidden" name="items[{{ loop.index }}][sku]" value="{{ product.sku }}">
                        <input type="hidden" name="items[{{ loop.index }}][quantity]" value="1">
                    {% else %}
                        {% set isDisabled = true %}
                    {% endif %}
                {% endfor %}

                {% embed molecule('product-slider-title') with {
                    modifiers: ['set'],
                    data: {
                        title: 'product.set.detail.set-contents' | trans,
                        productsCount: data.products | length,
                    },
                    embed: {
                        isDisabled: isDisabled,
                    },
                } only %}
                    {% block subContent %}
                        <div class="{{ config.name }}__sub-col">
                            {% if (data.productsCount) %}
                                <button type="submit" class="button button--expand-mobile float-right" {% if embed.isDisabled %}disabled{% endif %}>
                                    {{ 'product.set.detail.add-all-to-cart' | trans }}
                                </button>
                            {% endif %}
                        </div>
                    {% endblock %}
                {% endembed %}
            </form>

            <hr>
            {% block description %}
                {% if data.description is not empty %}
                    <p>{{ data.description }}</p>
                {% endif %}
            {% endblock %}
        {% endblock %}
    </div>

    {% block productSet %}
        {% if data.products | length %}
            <form method="GET">
                {% embed molecule('slick-carousel') with {
                    modifiers: ['align-left'],
                    data: {
                        slides: data.products,
                    },
                    attributes: {
                        'data-json': data.sliderConfig,
                        'custom-select-class-name': 'custom-select',
                    },
                } only %}
                    {% block slides %}
                        {% for product in data.slides %}
                            {% embed molecule('product-item') with {
                                modifiers: ['stretch', 'slider', 'product-set'],
                                data: {
                                    product: product,
                                },
                            } only %}
                                {% block content %}
                                    {{ parent() }}

                                    {% set isNotAvailable = data.product.idProductConcrete and not data.product.available %}

                                    {% embed molecule('variant-configurator', 'ProductDetailPage') ignore missing with {
                                        class: 'spacing-top spacing-top--big',
                                        data: {
                                            superAttributes: data.product.attributeMap.superAttributes,
                                            selectedAttributes: data.product.selectedAttributes,
                                            availableAttributes: data.product.availableAttributes,
                                            useExternalForm: true,
                                        },
                                        embed: {
                                            idProductAbstract: data.idProductAbstract,
                                        },
                                    } only %}
                                        {% block variant %}
                                            <li class="list__item">
                                                {% include molecule('variant', 'ProductDetailPage') ignore missing with {
                                                    modifiers: ['bundle'],
                                                    data: {
                                                        name: name,
                                                        formName: 'attributes[' ~ embed.idProductAbstract ~ '][' ~ name ~ ']',
                                                        values: values,
                                                        selectedValue: selectedValue,
                                                        label: ('product.attribute.' ~ name) | trans,
                                                        isAvailable: isAvailable,
                                                        autoInitSelect: true,
                                                    },
                                                } only %}
                                            </li>
                                        {% endblock %}
                                    {% endembed %}

                                    {% if isNotAvailable %}
                                        <p>
                                            <strong>{{ "product.detail.out_of_stock" | trans }}</strong>
                                        </p>
                                    {% else %}
                                        {% set isDisabled = not data.product.idProductConcrete or not data.product.available %}

                                        {% if isDisabled %}
                                            <button type="button" class="button button--expand" disabled>{{ 'page.detail.add-to-cart' | trans }}</button>
                                        {% else %}
                                            <a href="{{ path('cart/add', {sku: data.sku}) }}" class="button button--expand" data-init-single-click>
                                                {{ 'page.detail.add-to-cart' | trans }}
                                            </a>
                                        {% endif %}
                                    {% endif %}
                                {% endblock %}
                            {% endembed %}
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            </form>
        {% else %}
            <div class="box">
                <p>
                    {{ 'product.set.detail.no-products' | trans }}
                </p>
            </div>
        {% endif %}
    {% endblock %}
{% endblock %}
