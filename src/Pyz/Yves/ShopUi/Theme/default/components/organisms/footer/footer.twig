{% extends model('component') %}

{% define config = {
    name: 'footer',
    tag: 'footer'
} %}

{% define data = {
    showNavigation: true
} %}

{% block body %}
    {% block footerTop %}
        <div class="container">
            <div class="{{ config.name }}__top">
                <div class="{{ config.name }}__content">
                    <div class="grid grid--justify grid--expand">
                        {% block navigation %}
                            <div class="col col--sm-12 col--lg-9">
                                {% include molecule('navigation-footer') with {
                                    class: config.name ~ '__navigation',
                                    data: {
                                        items: [
                                            {
                                                title: 'footer.help',
                                                isShow: data.showNavigation,
                                                templates: [
                                                    {
                                                        template: 'navigation-footer',
                                                        menu: 'FOOTER_NAVIGATION',
                                                    },
                                                ],
                                            },
                                            {
                                                title: 'footer.categories',
                                                templates: [
                                                    {
                                                        template: 'navigation-footer',
                                                        menu: 'FOOTER_NAVIGATION_CATEGORIES',
                                                    },
                                                ],
                                            }
                                        ],
                                    },
                                } only %}
                            </div>
                        {% endblock %}

                        {% block socials %}
                            <div class="col col--sm-12 col--lg-2">
                                <h5 class="title title--footer">{{ 'global.contact_us' | trans }}</h5>
                                <div class="{{ config.name }}__contact-info">
                                    <a class="{{ config.name }}__contact-info-item" href="tel:{{ 'global.phone.number' | trans }}">
                                        {{ 'global.phone.number' | trans }}
                                    </a>
                                    <a class="{{ config.name }}__contact-info-item" href="mailto:info@spryker.com">
                                        {{ 'global.email' | trans }}
                                    </a>
                                </div>

                                <div class="{{ config.name }}__socials">
                                    <div class="{{ config.name }}__socials-holder">
                                        {% widget 'NavigationWidget' args ['SOCIAL_LINKS', 'navigation-socials'] %}{% endwidget %}
                                    </div>
                                </div>
                            </div>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block copyright %}
        <div class="{{ config.name }}__bottom">
            {% include molecule('copyright-build-with') with {
                class: 'container text-center',
            } only %}
        </div>
    {% endblock %}
{% endblock %}
