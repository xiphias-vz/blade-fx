{% extends model('component') %}

{% define config = {
    name: 'footer',
    tag: 'footer'
} %}

{% define data = {
    showNavigation: true,
    codeBucket: app.currentCodeBucket
} %}

{% block body %}
    {% set fontClass = data.codeBucket == "CZ" ? 'cz-font' : '' %}
    {% block footerTop %}
        <div class="curved-line"></div>
        <div class="container footer-container {{ fontClass }}">
            <div class="{{ config.name }}__top">
                <div class="{{ config.name }}__content">
                    <div class="grid grid--expand">
                        <div class="footer-logo col col--lg-2">
                            {% if app.currentCodeBucket == 'DE' %}
                            <div class="footer-logo-icon">
                                {% include molecule('logo') with {
                                    class: 'col col--no-shrink',
                                    modifiers: modifiers | merge(['footer']),
                                    attributes: {
                                        src: publicPath('images/logo-new-globus.png')
                                    }
                                } only %}
                                <div class="footer-logo-text">
                                    <p>{{ 'footer.logo.text.globus' | trans }}</p>
                                </div>
                            </div>
                            {% else %}
                            <div class="footer-logo-icon-CZ">
                                {% include molecule('logo') with {
                                    class: 'col col--no-shrink',
                                    modifiers: modifiers | merge(['footer']),
                                    attributes: {
                                        src: publicPath('images/iglobuscz_logo.png')
                                    }
                                } only %}
                            </div>
                            {% endif %}
                        </div>
{#                        <div class="contact-store-info">#}
{#                        </div>#}
                        <div class="col col--lg-7" >
                            <div id="footerNav" class="custom-element navigation-footer footer__navigation">
                                {% block footerNavigation %}
                                    {% cms_slot 'slt-footer' %}
                                {% endblock %}
                            </div>
                        </div>

                        {% block payments %}
                            <div class="icon-container col col--lg-3 {{ data.codeBucket == "DE" ? 'icon-container_DE' : 'icon-container_CZ' }}">
                                <h3 class="title title--footer">{{ 'global.paymentProviders' | trans }}</h3>
                                <div class="div-margin-right">
                                    <img src={{ publicPath("/images/visa.svg")}}  width="40px" height="40px" />
                                </div>
                                <div>
                                    <img src={{ publicPath("/images/maestro.svg")}}  width="40px" height="40px" />
                                </div>
                                <div class="div-margin-left">
                                    <img src={{ publicPath("/images/vpay.svg")}}  width="40px" height="40px" />
                                </div>
                                <br/>
                                <div style="margin-right: 20px">
                                    <img src={{ publicPath("/images/google_pay.svg")}}  width="40px" height="40px" />
                                </div>
                                <div>
                                    <img src={{ publicPath("/images/mastercard.svg")}}  width="60px" height="40px" />
                                </div>
                                <div style="margin-left: 5px">
                                    <img src={{ publicPath("/images/apple_pay.svg")}}  width="40px" height="40px" />
                                </div>
                                <br/>
                                <div class="div-margin-right">
                                    <img src={{ publicPath("/images/americanexpress.svg")}}  width="40px" height="40px" />
                                </div>
                                <div>
                                    <img src={{ publicPath("/images/girocard.svg")}}  width="40px" height="40px" />
                                </div>
                                <div class="div-margin-left" style="position: relative;top:-15px">
                                    <img src={{ publicPath("/images/bluecode.png")}}  width="50px" height="10px" />
                                </div>
                            </div>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block copyright %}
        <div class="{{ config.name }}__bottom">
            {% include molecule('copyright-build-with') with {
                class: 'container text-center',
            } only %}
        </div>
    {% endblock %}
{% endblock %}
