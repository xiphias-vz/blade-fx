{% extends atom('thumbnail', '@SprykerShop:ShopUi') %}

{% define data = {
    imageWithoutThumb: '',
} %}

{% block body %}
    {% set imageExtraClasses = '' %}
    {% block image %}
        <img class="{{ component.renderClass(config.name ~ '__image', modifiers) }} {{ imageExtraClasses }}" data-src="{{ data.imageWithoutThumb }}" data-storage="{{ data.imageWithoutThumb }}" {{ component.renderAttributes(attributes) }}>
    {% endblock %}
{% endblock %}
