{% extends atom('thumbnail', '@SprykerShop:ShopUi') %}

{% block body %}
    {% set defaultImage = publicPath("/images/kein_bild_vorhanden.png") %}
    {% set imageExtraClasses = '' %}
    {% block image %}
        <img onerror="this.src = '{{ defaultImage }}'" class="{{ component.renderClass(config.name ~ '__image', modifiers) }} {{ imageExtraClasses }}" {{ component.renderAttributes(attributes) }}>
    {% endblock %}
{% endblock %}
