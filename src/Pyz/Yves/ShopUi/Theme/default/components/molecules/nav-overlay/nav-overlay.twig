{% extends model('component') %}

{% define config = {
    name: 'nav-overlay',
    tag: 'nav-overlay',
} %}

{% define attributes = {
    'nav-class': required,
    'nav-active-class': required,
    'trigger-open-class-name': required,
    'active-link': required,
} %}

{% block body %}
    <div class="{{ config.name }}__shadow {{ config.jsName }}__shadow"></div>
    <div class="{{ config.name }}__container">
        {% block dropDown %}
            {% include molecule('user-block') with {
                class: config.jsName ~ '__drop-down-block',
            } only %}
            <div class="js-ajax-add-to-cart__cart-block">
                {% include molecule('cart-block') with {
                    class: config.jsName ~ '__drop-down-block',
                } only %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
