{% extends model('component') %}

{% define config = {
    name: 'confirmation-modal',
    tag: 'confirmation-modal',
} %}

{% define data = {
    title: null,
    buttons: {
        submit: {
            title: '',
        },
        cancel: {
            title: '',
        },
    },
} %}

{% define attributes = {
    'trigger-class': '',
} %}

{% block body %}
    <div class="{{ config.name }}__overlay">
        <span class="{{ config.name }}__backdrop {{ config.jsName }}__close"></span>

        {% block container %}
            <div class="{{ config.name }}__container">
                {% block title %}
                    {% if data.title %}
                        <div class="{{ config.name }}__title">
                            {{ data.title | trans }}
                        </div>
                    {% endif %}
                {% endblock %}

                {% block content %}
                    <div class="{{ config.name }}__content">
                        {% block contentInner %}{% endblock %}

                        {% block modalActions %}
                            <div class="grid grid--indent-sm">
                                {% block modalConfirmCol %}
                                    <div class="col col--spaced-sm col--sm-12 col--md-6">
                                        {% block modalConfirm %}
                                            <button class="button button--expand button--alert {{ config.jsName }}__close">
                                                {{ data.buttons.submit.title | trans }}
                                            </button>
                                        {% endblock %}
                                    </div>
                                {% endblock %}

                                {% block modalCancelCol %}
                                    <div class="col col--spaced-sm col--sm-12 col--md-6">
                                        {% block modalCancel %}
                                            <button type="button" class="button button--expand {{ config.jsName }}__close">
                                                {{ data.buttons.cancel.title | trans }}
                                            </button>
                                        {% endblock %}
                                    </div>
                                {% endblock %}
                            </div>
                        {% endblock %}
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
