{% extends molecule('logo', '@SprykerShop:ShopUi') %}

{% define config = {
    renderAttributes: false,
} %}

{% if app.currentCodeBucket == 'DE' %}
    {% define attributes = {
        src: publicPath('images/logo@3x.png'),
        alt: 'global.shop' | trans,
    } %}
{% else %}
{#    {% define attributes = {#}
{#        src: publicPath('images/logo@3x.png'),#}
{#        alt: 'global.shop' | trans,#}
{#    } %}#}
    {% define attributes = {
        src: publicPath('images/iglobuscz_logo.png'),
        alt: 'global.shop' | trans,
    } %}
{% endif %}

{% block body %}

    <a href="/" class="{{ component.renderClass(config.name ~ '__link', modifiers) }}">
        {% if app.currentCodeBucket == 'DE' %}
            <img class="{{ component.renderClass(config.name ~ '__image', modifiers) }}" {{ component.renderAttributes(attributes) }}>
        {% else %}
            <img class="{{ component.renderClass(config.name ~ '__image-CZ', modifiers) }}" {{ component.renderAttributes(attributes) }}>
        {% endif %}
    </a>
{% endblock %}
