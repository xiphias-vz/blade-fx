{% extends model('component') %}

{% define config = {
    name: 'navigation-icon-list',
    tag: 'nav',
} %}

{% define data = {
    nodes: [],
} %}

{% block body %}
    <ul class="menu menu--inline">
        {% for node in data.nodes %}
            {% embed atom('node') with {
                modifiers: modifiers,
                class: 'menu__item' ~ (node.url ? '' : ' ' ~ node.cssClass),
                config: {
                    tag: 'li',
                },
                data: {
                    node: node,
                },
            } only %}
                {% block body %}
                    {% set linkModifiers = component.renderClass('link', modifiers | merge([data.node.cssClass, 'alt'])) %}

                    {{ parent() }}
                {% endblock %}

                {% block url %}
                    <a class="{{ linkModifiers }} {{ data.node.cssClass }}" href="{{ data.node.url }}" title="{{ data.node.title }}">
                        {% include atom('icon') with {
                            modifiers: ['big', data.node.cssClass] | merge(modifiers),
                            data: {
                                name: data.node.cssClass,
                            },
                        } only %}
                    </a>
                {% endblock %}

                {% block externalUrl %}
                    <a class="{{ linkModifiers }} {{ data.node.cssClass }}" href="{{ data.node.url }}" target="_blank" title="{{ data.node.title }}" rel="noopener">
                        {% include atom('icon') with {
                            modifiers: ['big', data.node.cssClass] | merge(modifiers),
                            data: {
                                name: data.node.cssClass,
                            },
                        } only %}
                    </a>
                {% endblock %}

                {% block other %}
                    {% include atom('icon') with {
                        modifiers: ['big', data.node.cssClass],
                        data: {
                            name: data.node.cssClass,
                        },
                    } only %}
                {% endblock %}
            {% endembed %}
        {% endfor %}
    </ul>
{% endblock %}
