{% extends model('component') %}

{% define config = {
    name: 'breadcrumb-step',
    tag: 'breadcrumb-step'
} %}

{% define data = {
    url: null,
    label: null,
    itemProp: null,
    withChevron: true
} %}

{% set isLink = data.url is not empty %}

{% block body %}
    {%- if isLink -%}
        {% if app.currentCodeBucket == 'DE' %}
            <a class="{{ config.name }}__link" href="{{ data.url }}">
        {% else %}
            <a class="{{ config.name }}__link-CZ" href="{{ data.url }}">
        {% endif %}
    {%- endif -%}

        {%- if data.itemProp -%}
            <span class="{{ config.name }}__prop" itemprop="{{-data.itemProp-}}">
        {%- endif -%}

            {{- data.label -}}

        {%- if data.itemProp -%}
            </span>
        {%- endif -%}

    {%- if isLink -%}
        </a>
    {%- endif -%}

    <span class="{{ component.renderClass(config.name ~ '__check', modifiers) }}">
        {% include atom('icon') with {
            data: {
                name: 'check-additional',
            },
        } only %}
    </span>

    {% if data.withChevron %}
        <span class="{{ config.name }}__separator"></span>
    {% endif %}
{% endblock %}
