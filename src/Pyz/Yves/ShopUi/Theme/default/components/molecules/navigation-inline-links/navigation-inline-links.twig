{% extends model('component') %}

{% define config = {
    name: 'navigation-inline-links'
} %}

{% define data = {
    nodes: [],

} %}

{% block body %}
    <ul class="inline-list">
        {% for node in data.nodes %}
            {% embed atom('node') with {
                modifiers: modifiers,
                config: {
                    tag: 'li'
                },
                data: {
                    node: node
                }
            } only %}
                {% block url %}
                    <a class="" href="{{ data.node.url }}">{{ data.node.title }}</a>
                {% endblock %}

                {% block externalUrl %}
                    <a class="" href="{{ data.node.url }}" target="_blank">{{ data.node.title }}</a>
                {% endblock %}


            {% endembed %}
        {% endfor %}
    </ul>

{% endblock %}
