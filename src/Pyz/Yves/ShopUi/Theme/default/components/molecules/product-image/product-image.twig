{% extends model('component') %}

{% define config = {
    name: 'product-image'
} %}

{% define data = {
    name: '',
    image: null
} %}

{% block body %}
    {% if data.image is not empty %}
        {% include molecule('lazy-thumbnail') with {
            modifiers: ['small'] | merge(modifiers),
            attributes: {
                alt: data.name,
                src: data.image,
            },
        } only %}
    {% else %}
        <div class="text-center">
            <small>{{ 'global.no_image_available' | trans }}</small>
        </div>
    {% endif %}
{% endblock %}
