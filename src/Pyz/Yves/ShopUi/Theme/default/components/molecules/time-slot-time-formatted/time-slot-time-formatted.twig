{% extends model('component') %}

{% define config = {
    name: 'time-slot-time-formatted',
    tag: 'span'
} %}

{% define data = {
    timeFrom: required,
    timeTo: required
} %}

{% block body %}
    {{ data.timeFrom | date("H:i") }} {{ 'time-format.hour' | trans }}
  - {{ data.timeTo | date("H:i") }} {{ 'time-format.hour' | trans }}
{% endblock %}
