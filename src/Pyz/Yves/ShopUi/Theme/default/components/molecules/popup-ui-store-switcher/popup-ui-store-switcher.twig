{% extends model('component') %}

{% define config = {
    name: 'popup-ui-store-switcher',
    tag: 'popup-ui-store-switcher',
} %}

{% block body %}
{% if app.currentCodeBucket == 'DE' %}
    <div class="{{ config.name }}__overlay">
        <div class="{{ config.name }}__container">
            <div class="{{ config.name }}__content">
                <div class="main__inner">
                    <div class="col col--sm-12 col--lg-12">
                        <div class="col col--sm-8 col--lg-8">
                            <h1 class="title--shop-switcher">
                                {{ 'store.switcher.pop-up.welcome.message_1' | trans }}
                            </h1>
                            <div class="sub-title--shop-switcher">
                                {{ 'store.switcher.pop-up.welcome.message_2' | trans }}
                            </div>
                        </div>
                        <div class="col col--sm-4 col--lg-4">
                            <img src="{{ publicPath("/images/store-selection.png") }}" width="90%" height="90%" />
                        </div>

                        <div class="message--shop-switcher">
                            {{ 'store.switcher.pop-up.second-message_1' | trans }}<br/>
                            {{ 'store.switcher.pop-up.second-message_2' | trans }}
                        </div>
                        <div class="col col--sm-12 col--lg-8 col--xs-12 form-dropdown--shop-switcher">
                            {% widget 'StoreSwitcherWidget' %}{% endwidget %}
                        </div>
                        <div class="col col--sm-12 col--lg-12 col--xs-12 form-text--shop-switcher">
                            {{ 'store.switcher.pop-up.choose.pick-up.location' | trans }}
                        </div>
                        <div class="col col--sm-12 col--lg-8 col--xs-12 is-hidden" id="form-password-shop-switcher">
                            <input type="hidden" id="form-url-shop-switcher" />
                            <label for="{{ config.name }}-password">{{ 'store.switcher.pop-up.password.required' | trans }}</label>
                            <input id="{{ config.name }}-password" type="password" placeholder="{{ 'customer.login.password_placeholder' | trans }}" class="input input--expand" />
                            <p id="{{ config.name }}-error-message" style="color:red"></p>
                            <br>
                            <button type="button" id="{{ config.name }}-button-save" class="button button--hollow-border-light">
                                {{ 'auth.login' | trans }}</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="{{ config.name }}__overlay">
        <div class="{{ config.name }}__container">
            <div class="{{ config.name }}__content">
                <div class="main__inner">
                    <div class="col col--sm-12 col--lg-12">
                        <div class="col col--sm-8 col--lg-8">
                            <div class="sub-title--shop-switcher-CZ">
                                {{ 'store.switcher.pop-up.welcome.message_1' | trans }}
                            </div>
                        </div>
                        <div class="col col--sm-4 col--lg-4">
                            <img src="{{ publicPath("/images/store-selection.png") }}" width="90%" height="90%" />
                        </div>
                        <div class="message--shop-switcher-CZ">
                            {{ 'store.switcher.pop-up.second-message_1' | trans }}
                        </div>
                        <div class="col col--sm-12 col--lg-8 col--xs-12 form-dropdown--shop-switcher">
                            {% widget 'StoreSwitcherWidget' %}{% endwidget %}
                        </div>
                        <div class="col col--sm-12 col--lg-12 col--xs-12 form-text--shop-switcher form-text--shop-switcher-CZ">
                            {{ 'store.switcher.pop-up.second-message_2' | trans }}
                        </div>
                        <div class="col col--sm-12 col--lg-8 col--xs-12 is-hidden" id="form-password-shop-switcher">
                            <input type="hidden" id="form-url-shop-switcher" />
                            <label for="{{ config.name }}-password">{{ 'store.switcher.pop-up.password.required' | trans }}</label>
                            <input id="{{ config.name }}-password" type="password" placeholder="{{ 'customer.login.password_placeholder' | trans }}" class="input input--expand" />
                            <p id="{{ config.name }}-error-message" style="color:red"></p>
                            <br>
                            <button type="button" id="{{ config.name }}-button-save" class="button button--hollow-border-light">
                                {{ 'auth.login' | trans }}</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}
