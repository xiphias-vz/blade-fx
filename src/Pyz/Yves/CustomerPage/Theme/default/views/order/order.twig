{% extends view('order', '@SprykerShop:CustomerPage') %}

{% block customerContent %}
    {% include molecule('title-box', 'CustomerPage') with {
        modifiers: ['borderless'],
        data: {
            title: 'customer.order.all_orders' | trans,
        },
    } only %}

    {% include molecule('order-table', 'CustomerPage') with {
        data: {
            orders: data.orders,
        },
    } only %}

    {% if data.pagination.maxPage > 1 %}
        {% include molecule('pagination') with {
            class: 'spacing-top spacing-top--big',
            data: data.pagination,
        } only %}
    {% endif %}
{% endblock %}
