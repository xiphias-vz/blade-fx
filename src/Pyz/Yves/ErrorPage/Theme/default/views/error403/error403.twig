{% extends view('error403', '@SprykerShop:ErrorPage') %}

{% block class -%}
    {{ parent() }} page-layout-main--error
{%- endblock %}

{% define data = {
    buttonClass: 'button',
    fieldName: '',
    fieldValue: '',
    homePage: '',
    customerContact: 'https://globus.zendesk.com/hc/de/requests/new',
} %}

{% block pageInfo %}{% endblock %}

{% block content %}
    {% set link -%}
        <a href="{{ path('home') }}" class="link">{{ 'error_page.home_link' | trans }}</a>
    {%- endset %}
    <div>
        <h1 class="title title--general">{{ 'error_page.title' | trans }}</h1>
        <p class="title title--general spacing-bottom--big" style="margin-top: 2%">{{ 'error_page.second_title' | trans }}</p>
        <p style="margin-top: 5%">{{'error_page.text' | trans}}</p>
        <a class="{{ data.buttonClass }}" style="margin-top: 2%" href="/">
            {{ 'error_page.button_home' | trans}}
        </a>
        <p style="margin-top: 2%">{{'error_page.second_text' | trans}}</p>
        <p>{{'error_page.third_text' | trans}}</p>
        <a class="{{ data.buttonClass }}" style="margin-top: 2%" href="{{ data.customerContact }}" target="_blank">
                {{ 'error_page.button_contact' | trans}}
        </a>
    </div>
    <script>
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push({
            'event': 'error',
            'errorType': '403 - Forbidden'
        });
    </script>
{% endblock %}

{% block contentClass -%}
    page-layout-main__main
{%- endblock %}
