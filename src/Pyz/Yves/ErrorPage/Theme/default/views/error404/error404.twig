{% extends view('error404', '@SprykerShop:ErrorPage') %}

{% block class -%}
    {{ parent() }} page-layout-main--error
{%- endblock %}

{% define config = {
    name: 'error-not-found',
}%}

{% define data = {
    buttonClass: 'button',
    fieldName: '',
    fieldValue: '',
    homePage: '',
    customerContact: 'https://globus.zendesk.com/hc/de/requests/new',
    customerContact_CZ: '/cs/otazky-a-odpovedi',
} %}

{% block pageInfo %}{% endblock %}

{% block content %}
    {% set link -%}
        <a href="{{ path('home') }}" class="link">{{ 'error_page.home_link' | trans }}</a>
    {%- endset %}
    <div class="{{ config.name }}__container">
        {% if app.currentCodeBucket == 'DE' %}
            <h1 class="{{ config.name }}__title title--general">{{ 'error_page.title' | trans }}</h1>
        {% else %}
            <h1 class="title title--general title--heading-CZ">{{ 'error_page.title' | trans }}</h1>
        {% endif %}
        <p class="title title--general" style="margin-top: 2%">{{ 'error_page.second_title' | trans }}
        {{'error_page.text' | trans}}</p>
        {% if app.currentCodeBucket == 'DE' %}
            <a class="{{ data.buttonClass }} {{ config.name }}__button" style="margin-top: 2%" href="/">
                {{ 'error_page.button_home' | trans}}
                <div class="{{ config.name }}_btn-arrow">{% include atom('icon') with {
                        modifiers: ['small'],
                        data: {
                            name: 'arrow-right',
                        },
                    } only %}
                </div>
            </a>
        {% else %}
            <a class="{{ data.buttonClass }} {{ data.buttonClass }}--font-CZ {{ data.buttonClass }}--backgroundcolor-CZ" style="margin-top: 1%" href="/">
                {{ 'error_page.button_home' | trans}}
                <div class="{{ config.name }}_btn-arrow">{% include atom('icon') with {
                        modifiers: ['small'],
                        data: {
                            name: 'arrow-right',
                        },
                    } only %}
                </div>
            </a>
        {% endif %}
        <p style="margin-top: 2%">{{'error_page.second_text' | trans}}
        {{'error_page.third_text' | trans}}</p>
        {% if app.currentCodeBucket == 'DE' %}
            <a class="{{ data.buttonClass }} {{ config.name }}__button" href="{{ data.customerContact }}" target="_blank">
                {{ 'error_page.button_contact' | trans}}
                <div class="{{ config.name }}_btn-arrow">{% include atom('icon') with {
                    modifiers: ['small'],
                    data: {
                        name: 'arrow-right',
                    },
                } only %}
                </div>
            </a>
        {% else %}
            <a class="{{ data.buttonClass }} {{ data.buttonClass }}--font-CZ {{ data.buttonClass }}--backgroundcolor-CZ" style="margin-top: 1%" href="{{ data.customerContact_CZ }}">
                {{ 'error_page.button_contact' | trans}}
                <div class="{{ config.name }}_btn-arrow">{% include atom('icon') with {
                        modifiers: ['small'],
                        data: {
                            name: 'arrow-right',
                        },
                    } only %}
                </div>
            </a>
        {% endif %}

    </div>
    <div class="{{ config.name }}__image-container" >
        <h1 class="{{ config.name }}__mobile-title">{{ 'error_page.title' | trans }}</h1>
        <img alt="error-image" class="{{ config.name }}__image" src={{ publicPath("/images/error_404.png")}} >
    </div>
    <script>
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push({
            'event': 'error',
            'errorType': '404 - Page Not Found'
        });
    </script>
{% endblock %}

{% block contentClass -%}
    page-layout-main__main
{%- endblock %}
