{% extends template('widget') %}

{% define data = {
    name: 'navigation-top',
    cartQuantity: app['cart.quantity'] | default,
    cartAmount: app['cart.amount'] | default,
    error: _view.error | default | trans,
} %}

{% block body %}
    {% spaceless %}
        {% set response = {
            'error': data.error,
            'amount': data.cartAmount | money,
            'quantity': data.cartQuantity,
        } %}
        {{ response | json_encode | raw }}
    {% endspaceless %}
{% endblock %}
