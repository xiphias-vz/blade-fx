{% extends model('component') %}

{% define config = {
    name: 'payment-info',
} %}

{% define data = {
    iconList: [
        'visa-colored',
        'mastercard-colored',
        'sofort',
    ],
    messageText: 'cart.summary.message' | trans,
} %}

{% block body %}
    <div class="{{ config.name }}__container">
        {% block icons %}
            <ul class="{{ config.name }}__icons">
                {% for icon in data.iconList %}
                    <li class="{{ config.name }}__icons-item">
                        <span class="{{ config.name }}__icon-holder">
                            {% include atom('icon') with {
                                modifiers: ['bigger'],
                                data: {
                                    name: icon,
                                },
                            } only %}
                        </span>
                    </li>
                {% endfor %}
            </ul>
        {% endblock %}

        {% block message %}
            <span class="{{ config.name }}__text">
                {{ data.messageText }}
            </span>
        {% endblock %}
    </div>
{% endblock %}
