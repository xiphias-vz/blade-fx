{% extends template('widget') %}

{% define data = {
    nodes: _widget.navigationTree.nodes,
} %}

{% block body %}
    <h2 class="spacing-bottom">{{ 'popular.categories' | trans }}</h2>

    <div class="grid grid--justify grid--indent">
        {% for node in data.nodes %}
            <div class="col col--sm-12 col--md-6 col--lg-4 col--spaced-lg">
                {% include molecule('navigation-category', 'NavigationWidget') with {
                    data: {
                        node: node,
                    },
                } only %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
