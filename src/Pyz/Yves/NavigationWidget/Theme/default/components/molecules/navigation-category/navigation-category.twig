{% extends model('component') %}

{% define config = {
    name: 'navigation-category',
    tag: 'a',
} %}

{% define data = {
    node: {},
} %}

{% define attributes = {
    href: data.node.url,
} %}

{% block body %}
    {% if app.currentCodeBucket == 'DE' %}
    <div class="{{ config.name }}__title">
        {{ data.node.title }}
    <div class="{{ config.name }}__browse-button">{{ 'browse.category' | trans }}</div>
    </div>
    <span class="{{ config.name }}__image {{ data.node.cssClass }}"></span>
    {% else %}
    <div class="{{ config.name }}__title">
        {{ data.node.title }}
        <div class="{{ config.name }}__browse-button-CZ button-font-CZ">{{ 'browse.category' | trans }}</div>
    </div>
    <span class="{{ config.name }}__image {{ data.node.cssClass }}"></span>
    {% endif %}
{% endblock %}
