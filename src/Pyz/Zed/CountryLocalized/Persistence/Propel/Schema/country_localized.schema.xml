<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" namespace="Orm\Zed\Sales\Persistence" package="src.Orm.Zed.Sales.Persistence" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd">

    <table name="pyz_country_localized">
        <column name="id_country_localized" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_locale" type="INTEGER" required="true"/>
        <column name="fk_country" type="INTEGER" required="true"/>
        <column name="name_localized" type="VARCHAR" required="true"/>

        <foreign-key name="pyz_country_localized-fk_locale" foreignTable="spy_locale">
            <reference local="fk_locale" foreign="id_locale"/>
        </foreign-key>

        <foreign-key name="pyz_country_localized-fk_country" foreignTable="spy_country">
            <reference local="fk_country" foreign="id_country"/>
        </foreign-key>
    </table>

</database>
