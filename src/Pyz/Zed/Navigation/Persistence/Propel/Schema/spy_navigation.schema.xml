<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\Navigation\Persistence" package="src.Orm.Zed.Navigation.Persistence">

    <table name="spy_navigation">
        <behavior name="event">
            <parameter name="spy_navigation-all" column="*"/>
        </behavior>
    </table>

    <table name="spy_navigation_node">
        <behavior name="event">
            <parameter name="spy_navigation_node-all" column="*"/>
        </behavior>
    </table>

    <table name="spy_navigation_node_localized_attributes">
        <column name="fk_product_label" required="false" type="INTEGER" default="NULL"/>
        <foreign-key foreignTable="spy_product_label">
            <reference foreign="id_product_label" local="fk_product_label"/>
        </foreign-key>
        <behavior name="event">
            <parameter name="spy_navigation_node_localized_attributes-all" column="*"/>
        </behavior>
    </table>

</database>
