<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\Customer\Persistence" package="src.Orm.Zed.Customer.Persistence">

    <table name="spy_customer_address" idMethod="native" phpName="SpyCustomerAddress">
        <column name="additional_info" size="255" type="VARCHAR"/>
        <column name="floor" size="255" type="VARCHAR"/>
        <column name="salutation" type="ENUM" valueSet="Mr, Ms, Divers, Dr"/>
        <column name="cell_phone" type="VARCHAR" />
    </table>

    <table name="spy_customer">
        <column name="merchant_reference" size="255" type="VARCHAR"/>
        <column name="salutation" type="ENUM" valueSet="Mr, Ms, Divers, Dr"/>
        <column name="third_party_registration" type="BOOLEAN"/>
        <column name="phone_prefix" type="VARCHAR" />
        <column name="mobile_phone_prefix" type="VARCHAR" />
        <column name="mobile_phone_number" type="VARCHAR" />
        <column name="birth_day" type="VARCHAR" />
        <column name="birth_month" type="VARCHAR" />
        <column name="birth_year" type="VARCHAR" />
        <column name="accept_notifications" type="BOOLEAN" />
        <column name="has_orders" type="BOOLEAN"/>
        <column name="my_globus_card" size="255" type="VARCHAR"/>
    </table>
</database>
