{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Scenario deletion confirmation' %}

{% block head_title %}
    {{ widget_title | trans }}
{% endblock %}
{% block section_title %}
    {{ widget_title | trans }}
{% endblock %}

{% block action %}
    {{ backActionButton(app.request.headers.get('referer'), 'Back' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-back">{{ 'Back' | trans }}</a>

            {{ form_start(deleteScenarioForm, {
                'action': url('/recommendations/delete-scenario/confirm', {'id': idRecommendationScenarios})
            }) }}

            <input type="submit" class="btn btn-danger safe-submit" value="{{ 'Delete Scenario' | trans }}">

            {{ form_end(deleteScenarioForm) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
