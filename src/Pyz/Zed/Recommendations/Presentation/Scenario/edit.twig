{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit Scenario' | trans ~ ' ' ~ scenarioForm.scenarioId %}

{% block section_title %}
    {{ widget_title }}
{% endblock %}

{% block action %}
    {{ backActionButton(url('/recommendations/scenario'), 'Back to Scenario' | trans) }}
    {{ removeActionButton(url('/recommendations/delete-scenario', {'id': scenarioForm.idRecommendationScenarios}), 'Delete' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: 'Scenario data' | trans } %}

        {% block widget_content %}

            {% include '@Recommendations/Scenario/partials/scenario-form.twig' %}

        {% endblock %}

    {% endembed %}

{% endblock %}
