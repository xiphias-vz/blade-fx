{% embed '@Gui/Partials/widget.twig' with { widget_title: 'checkout.order.order-pickZone' | trans } %}
    {% block widget_content %}
        <div class="row">

                <div class="bottom-indent">
                    {% if pickZones is not null and userGroup != 'support_center_group'%}
                        {% for key,pickZone in pickZones %}
                            <div class="grid">
                                <h3>{{ pickZone }}</h3>
                                {% set break = false %}
                                {% for item in itemStatusArray[key] if not break  %}
                                    {% if item == 'picked' or item == 'cancelled' %}
