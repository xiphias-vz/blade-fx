                                                            C23.5,14,23.1,13.3,22.4,13.2z"/>
                                            </g>
                                       </svg>
                                        </div>
                                        <div class="reset-picking-zone">
                                            {% include '@Oms/RenderForm/_partial/order-actions.twig' with {
                                                redirectUrl: changeStatusRedirectUrl,
                                                idSalesOrder: order.idSalesOrder,
                                                pickingZone: pickZone,
                                                events: ['Zur√ºcksetzen']
                                            } only %}
                                        </div>
                                        {% set break = true %}
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <table class="footable table toggle-arrow-tiny" data-qa="order-item-list">
                                <col style="width:10%" />
                                <col style="width:20%" />
                                <col style="width:20%" />
                                <col style="width:40%" />
                                <col style="width:10%" />

                                <thead>
                                <tr class="text-left">
                                    <th>{{ 'checkout.order.product-quantity' | trans }}</th>
                                    <th>{{ 'checkout.order.nr' | trans }}</th>
                                    <th>{{ 'checkout.order.ean' | trans }}</th>
                                    <th>{{ 'checkout.order.artikel' | trans }}</th>
                                    <th>{{ 'checkout.order.preis' | trans }}</th>
                                </tr>
                                </thead>

                                {% for item in itemDataArray[key] %}
                                    <tr>
                                        <td><div><p>{{ item.quantity }}</p></div></td>
                                        <td><div><p>{{ item.id }}</p></div></td>
                                        <td><div><p>{{ item.sku }}</p></div></td>
                                        <td><div><p>{{ item.name }}</p></div></td>
                                        <td><div>{{ item.sumPrice | money(true, order.currencyIsoCode) }}</div></td>
                                    </tr>
                                {% endfor %}
                            </table>
                        {% endfor %}
                    {% endif %}
                </div>

        </div>
    {% endblock %}
{% endembed %}
