{% set items = shipmentOrderItems.items | filter(item => item.relatedBundleItemIdentifier is empty and item.salesOrderConfiguredBundleItem is empty) %}
{% for orderItem in items %}
  <tr>
      {% embed '@Sales/Detail/boxes/order-item.twig' with {orderItem: orderItem, displayImage: true, image: orderItem.metadata.image, displayTotals: true, group: false} %}{% endembed %}
  </tr>
  {% embed '@Sales/Detail/boxes/order-item-option.twig' with {orderItem: orderItem} %} {% endembed %}
{% endfor %}
