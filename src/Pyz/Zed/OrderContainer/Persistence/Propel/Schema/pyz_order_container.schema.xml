<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\OrderContainer\Persistence"
          package="src.Orm.Zed.OrderContainer.Persistence">

    <table name="pyz_order_container">
        <column name="id_order_container" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="code" type="VARCHAR" required="true"/>
        <column name="fk_sales_order" type="BIGINT" required="true"/>

        <unique name="pyz_order_container-unique-key">
            <unique-column name="code"/>
            <unique-column name="fk_sales_order"/>
        </unique>

        <foreign-key name="pyz_order_container-fk_sales_order" foreignTable="spy_sales_order">
            <reference local="fk_sales_order" foreign="id_sales_order"/>
        </foreign-key>

        <id-method-parameter value="pyz_order_container_pk_seq"/>
    </table>

</database>
