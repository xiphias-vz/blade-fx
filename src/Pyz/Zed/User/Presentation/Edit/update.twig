{% extends '@Gui/Layout/layout.twig' %}

{% set title = 'Edit User' | trans ~ ': ' ~ userForm.vars.value.first_name ~ ' ' ~ userForm.vars.value.last_name %}
{% set widget_title = 'General Information' | trans  %}

{% block action %}
    {{ backActionButton('/user', 'List Users' | trans) }}
    {% if not isCurrentUserSupervisor %}
        {{ createActionButton('/user/edit/create', 'Add User' | trans) }}
    {% endif %}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(userForm) }}

            {% include '@User/_partials/user-form.twig' %}

            <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Update' | trans }}" />
            {{ form_end(userForm) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
