{% extends '@Gui/Layout/layout.twig' %}

{% if widget_title is not defined %}
    {% set widget_title = ('View Product Concrete' | trans) ~ ': ' ~ currentProduct.sku %}
{% endif %}

{% if submit_title is not defined %}
    {% set submit_title = 'Save' | trans %}
{% endif %}

{% if idProduct is not defined %}
    {% set idProduct = 0 %}
{% endif %}

{% block head_title -%}
    {{ widget_title }}
{%- endblock %}

{% block section_title %}{{ widget_title }}{% endblock %}

{% block action %}
    {{ backActionButton('/product-management', 'List Products' | trans) }}
    {{ editActionButton(url('/product-management/edit/variant', {'id-product': idProduct, 'id-product-abstract': idProductAbstract}), 'Edit' | trans) }}
    {{ editActionButton('/product-attribute-gui/view/product-abstract?id-product-abstract=' ~ idProduct, 'Manage Attributes' | trans) }}
{% endblock %}


{% block content %}

    {% include '@ProductManagement/View/_partials/info-general.twig' %}
    {% include '@ProductManagement/View/_partials/info-price-stock.twig' %}
    {% include '@ProductManagement/View/_partials/info-attribute.twig' %}
    {% include '@ProductManagement/View/_partials/info-image.twig' %}

{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ assetsPath('css/spryker-zed-productmanagement-main.css') }}" />
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="{{ assetsPath('js/spryker-zed-productmanagement-main.js') }}"></script>
{% endblock %}
