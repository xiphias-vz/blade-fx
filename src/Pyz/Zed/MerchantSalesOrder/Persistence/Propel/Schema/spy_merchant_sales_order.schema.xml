<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\MerchantSalesOrder\Persistence" package="src.Orm.Zed.MerchantSalesOrder.Persistence">
    <table name="spy_merchant_sales_order" phpName="SpyMerchantSalesOrder">
        <column name="fk_sales_order" type="BIGINT" required="true"/>
        <column name="fk_merchant" type="INTEGER" required="false"/>
        <column name="requested_delivery_date" type="TIMESTAMP"/>
        <column name="fk_user" type="INTEGER" required="false"/>
        <column name="store_status" type="VARCHAR" required="false"/>

        <column name="delivered_at" type="TIMESTAMP" />
        <column name="picked_at" type="TIMESTAMP" />
        <column name="collected_at" type="TIMESTAMP" />

        <foreign-key name="spy_merchant_sales_order-fk_merchant" foreignTable="spy_merchant" phpName="Merchant">
            <reference local="fk_merchant" foreign="id_merchant"/>
        </foreign-key>

        <foreign-key name="spy_merchant_sales_order-fk_user" foreignTable="spy_user">
            <reference local="fk_user" foreign="id_user"/>
        </foreign-key>

        <id-method-parameter value="spy_merchant_sales_order_pk_seq"/>
    </table>
    <table name="spy_merchant_sales_order_item">
        <column name="fk_sales_order_item" type="BIGINT" required="true"/>
    </table>

</database>
