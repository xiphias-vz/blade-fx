<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\TimeSlot\Persistence"
          package="src.Orm.Zed.TimeSlot.Persistence">

    <table name="pyz_time_slot">
        <column name="id_time_slot" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="merchant_reference" type="VARCHAR" required="true"/>
        <column name="day" type="VARCHAR" required="false"/>
        <column name="date" type="DATE"/>
        <column name="time_slot" type="VARCHAR" required="true"/>
        <column name="cut_off_time" type="INTEGER" required="false" />
        <column name="capacity" type="INTEGER" defaultValue="0" required="true"/>
        <column name="created_at" required="false" type="TIMESTAMP"/>

        <index name="pyz_imp_stock-index_merchant_reference_time_slot_date">
            <index-column name="merchant_reference"/>
            <index-column name="time_slot"/>
            <index-column name="date"/>
        </index>

    </table>

</database>
