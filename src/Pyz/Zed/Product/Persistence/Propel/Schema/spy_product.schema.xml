<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\Product\Persistence"
          package="src.Orm.Zed.Product.Persistence">

    <table name="spy_product_abstract">
        <column name="is_set_from_BO" type="BOOLEAN" required="false"/>
        <column name="sap_number" type="VARCHAR"/>
        <index>
            <index-column name="sap_number"/>
        </index>
        <behavior name="event">
            <parameter name="spy_product_abstract_all" column="*"/>
        </behavior>
    </table>

    <table name="spy_product_abstract_localized_attributes">
        <behavior name="event">
            <parameter name="spy_product_abstract_localized_attributes_all" column="*"/>
        </behavior>
    </table>

    <table name="spy_product">
        <column name="product_number" required="false" type="VARCHAR"/>
        <column name="sap_number" type="VARCHAR"/>
        <column name="assortment_zone" type="VARCHAR"/>
        <column name="last_import_at" type="TIMESTAMP"/>
        <column name="file_type" type="INTEGER"/>
        <column name="images" type="VARCHAR" size="4000"/>
        <column name="is_stock_from_status" type="TINYINT" default="0"/>
        <index name="index-spy_product-product_number">
            <index-column name="product_number"/>
        </index>
        <index>
            <index-column name="sap_number"/>
        </index>
        <behavior name="event">
            <parameter name="spy_product_all" column="*"/>
        </behavior>
    </table>

    <table name="spy_product_localized_attributes">
        <behavior name="event">
            <parameter name="spy_product_localized_attributes_all" column="*"/>
        </behavior>
    </table>

    <table name="spy_product_attribute_key">
        <column name="ff_export" type="BOOLEAN" required="false" defaultValue="false"/>
        <behavior name="event">
            <parameter name="spy_product_attribute_key_all" column="*"/>
        </behavior>
    </table>

    <table name="spy_product_abstract_store">
        <behavior name="event">
            <parameter name="spy_product_abstract_store_all" column="*"/>
        </behavior>
    </table>

    <table name="pyz_product_abstract_store" idMethod="native" allowPkInsert="true" identifierQuoting="true">
        <column name="id_product_abstract_store" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="fk_product_abstract" required="true" type="INTEGER"/>
        <column name="fk_store" required="true" type="INTEGER"/>
        <foreign-key name="pyz_product_abstract_store-fk_product" foreignTable="spy_product_abstract">
            <reference local="fk_product_abstract" foreign="id_product_abstract"/>
        </foreign-key>
        <foreign-key name="pyz_product_abstract_store-fk_store" foreignTable="spy_store">
            <reference local="fk_store" foreign="id_store"/>
        </foreign-key>
        <index name="index-pyz_product_abstract_store-fk_product_abstract">
            <index-column name="fk_product_abstract"/>
        </index>
        <index name="index-pyz_product_abstract_store-fk_store">
            <index-column name="fk_store"/>
        </index>
        <unique name="pyz_product_abstract_store-fk_product_abstract-fk_store">
            <unique-column name="fk_product_abstract"/>
            <unique-column name="fk_store"/>
        </unique>
        <id-method-parameter value="id_product_abstract_store_pk_seq"/>
        <behavior name="event">
            <parameter name="pyz_product_abstract_store_all" column="*"/>
        </behavior>
    </table>


</database>
