{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit Merchant' | trans ~ ': ' ~ idMerchant %}
{% set section_title_reference = 'Edit Merchant' | trans ~ ': ' ~ merchantReference %}

{% block section_title section_title_reference %}
{% block head_title widget_title %}

{% block action %}
    {{ backActionButton(url('/merchant-gui/list-merchant'), 'Back to Merchants' | trans) }}
    {%  for applicableMerchantStatus in applicableMerchantStatuses %}
        {% if applicableMerchantStatus == 'denied' %}
            {{ removeActionButton(url('/merchant-gui/merchant-status', {'status': applicableMerchantStatus, 'id-merchant': idMerchant}), (applicableMerchantStatus ~ '_button') | trans, {'icon':'<i class="fa fa-key"></i> '}) }}
        {% else %}
            {{ createActionButton(url('/merchant-gui/merchant-status', {'status': applicableMerchantStatus, 'id-merchant': idMerchant}), (applicableMerchantStatus ~ '_button') | trans, {'icon':'<i class="fa fa-key"></i> '}) }}
        {%  endif %}
    {%  endfor %}
{% endblock %}

{% block content %}
    <link rel="stylesheet" href="{{ assetsPath('css/spryker-zed-merchantgui-main.css') }}">
    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            {{ tabs(merchantFormTabs, {'merchantForm': form, 'isCurrentUserAdmin': isCurrentUserAdmin, 'pickingZones': pickingZones, 'mappedAssortmentPickingZones': mappedAssortmentPickingZones, 'pickingAppVersion': pickingAppVersion, 'pickingAppVersionDisplay': pickingAppVersionDisplay }) }}

            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}
    <script src="{{ assetsPath('js/spryker-zed-merchantgui-main.js') }}"></script>
{% endblock %}
