<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\PickingZone\Persistence"
          package="src.Orm.Zed.PickingZone.Persistence">

    <table name="pyz_picking_zone">
        <column name="id_picking_zone" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="name" type="VARCHAR" required="true"/>

        <index name="pyz_picking_zone-index-name">
            <index-column name="name"/>
        </index>

        <id-method-parameter value="pyz_picking_zone_pk_seq"/>
    </table>

    <table name="pyz_order_picking_block">
        <column name="id_order_picking_block" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order" type="BIGINT" required="true"/>
        <column name="fk_picking_zone" type="INTEGER" required="true"/>
        <column name="fk_user" type="INTEGER" required="true"/>

        <unique name="pyz_order_picking_block-unique">
            <unique-column name="fk_sales_order"/>
            <unique-column name="fk_picking_zone"/>
            <unique-column name="fk_user"/>
        </unique>

        <foreign-key name="pyz_order_picking_block-fk_sales_order" foreignTable="spy_sales_order" phpName="SalesOrder">
            <reference local="fk_sales_order" foreign="id_sales_order"/>
        </foreign-key>

        <foreign-key name="pyz_order_picking_block-fk_picking_zone" foreignTable="pyz_picking_zone" phpName="PickingZone">
            <reference local="fk_picking_zone" foreign="id_picking_zone"/>
        </foreign-key>
        <index name="index-pyz_order_picking_block-fk_picking_zone">
            <index-column name="fk_picking_zone"/>
        </index>

        <foreign-key name="pyz_order_picking_block-fk_user" foreignTable="spy_user" phpName="User">
            <reference local="fk_user" foreign="id_user" />
        </foreign-key>
        <index name="index-pyz_order_picking_block-fk_user">
            <index-column name="fk_user"/>
        </index>

        <id-method-parameter value="pyz_order_picking_block_pk_seq"/>
    </table>

</database>
