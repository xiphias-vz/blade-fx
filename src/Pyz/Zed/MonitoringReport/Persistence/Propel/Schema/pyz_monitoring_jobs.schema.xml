<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\MonitoringReport\Persistence"
          package="src.Orm.Zed.MonitoringReport.Persistence">

    <table name="pyz_monitoring_jobs" idMethod="native" allowPkInsert="true">
        <column name="id_monitoring_job" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="job_name" required="true" size="255" type="VARCHAR"/>
        <column name="job_id" required="true" size="100" type="VARCHAR"/>
        <column name="is_store_related" required="true" type="BOOLEAN" default="false"/>
        <column name="store_exclusion_list" required="false" size="500" type="VARCHAR"/>
        <column name="max_sec_difference_from_last_success" required="true" type="INTEGER"/>

        <unique name="pyz_monitoring_jobs-id_monitoring_job">
            <unique-column name="id_monitoring_job"/>
        </unique>

    </table>

</database>
