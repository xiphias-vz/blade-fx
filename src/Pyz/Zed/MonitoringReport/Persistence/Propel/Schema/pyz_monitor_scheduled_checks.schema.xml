<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\MonitoringReport\Persistence"
          package="src.Orm.Zed.MonitoringReport.Persistence">

    <table name="pyz_monitor_scheduled_checks" idMethod="native" allowPkInsert="true">
        <column name="id" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="key" required="true" size="255" type="VARCHAR"/>
        <column name="executed_every_x_minutes" required="true" type="INTEGER"/>
        <column name="last_executed" required="true" type="TIMESTAMP"/>

        <unique name="pyz_monitor_scheduled_checks-id">
            <unique-column name="id"/>
        </unique>
        <index>
            <index-column name="key"/>
        </index>
    </table>
</database>
