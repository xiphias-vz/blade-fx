<?xml version="1.0"?>
<database xmlns="spryker:schema-01"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\Oms\Persistence"
          package="src.Orm.Zed.Oms.Persistence">

    <table name="spy_oms_transition_log" identifierQuoting="true">
        <column name="id_oms_transition_log" required="true" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order_item" type="BIGINT" required="true"/>
        <column name="fk_sales_order" type="BIGINT" required="true"/>
        <column name="fk_oms_order_process" type="BIGINT" required="false"/>
    </table>

    <table name="spy_oms_state_machine_lock" identifierQuoting="true">
        <column name="id_oms_state_machine_lock" required="true" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="details" type="VARCHAR" size="4096"/>
    </table>

    <table name="spy_oms_order_item_state" identifierQuoting="true">
        <column name="id_oms_order_item_state" required="true" type="BIGINT" autoIncrement="true" primaryKey="true"/>
    </table>

    <table name="spy_oms_order_item_state_history" identifierQuoting="true">
        <column name="id_oms_order_item_state_history" required="true" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order_item" type="BIGINT" required="true"/>
        <column name="fk_oms_order_item_state" type="BIGINT" required="true"/>
    </table>

    <table name="spy_oms_event_timeout" identifierQuoting="true">
        <column name="id_oms_event_timeout" required="true" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order_item" type="BIGINT" required="true"/>
        <column name="fk_oms_order_item_state" type="BIGINT" required="true"/>
    </table>

    <table name="spy_oms_order_process" identifierQuoting="true">
        <column name="id_oms_order_process" required="true" type="BIGINT" autoIncrement="true" primaryKey="true"/>
    </table>

</database>
